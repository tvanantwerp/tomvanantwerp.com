---
layout: layouts/base.liquid
---

<article class="writing">
    {% if splash %}
        <div class="writing__splash__background">
            {% image splash, splash_alt %}
        </div>
        <div class="writing__splash">
            <h1 class="writing__title--with-splash">{{ title }}</h1>
            {% if description %}
                <div class="writing__excerpt writing__excerpt--with-splash">
                    {{ description }}
                </div>
            {% endif %}
            {% if page.date %}
                <div class="writing__byline writing__byline--with-splash">
                    By Tom VanAntwerp on 
                    <time
                        datetime="{{ page.date | htmlDateString }}"
                        class="writing__date--with-splash"
                    >
                        {{ page.date | readableDate }}
                    </time>
                </div>
            {% endif %}
        </div>
    {% else %}
        <h1 class="writing__title">{{ title }}</h1>
        {% if page.date %}
            <div class="writing__byline">By Tom VanAntwerp on 
                <time
                    datetime="{{ page.date | htmlDateString }}"
                    class="writing__date"
                >
                    {{ page.date | readableDate }}
                </time>
            </div>
        {% endif %}
        {% if description %}
                <div class="writing__excerpt">
                    {{ description }}
                </div>
            {% endif %}
        <hr />
    {% endif %}
    {{ content }}
</article>
