---
import GitHub from '../icons/github.astro';
import Twitter from '../icons/twitter.astro';
import Bluesky from '../icons/bluesky.astro';
import Mastodon from '../icons/mastodon.astro';

const { title, year, twitter, github, bluesky, mastodon } = Astro.props;
---

<footer class="footer">
	<div class="footer__content">
		<div>{`Â© ${title} ${year}`}</div>
		<div class="footer__social-links">
			<a
				href={`https://twitter.com/${twitter}`}
				target="_blank"
				rel="noopener noreferrer"
			>
				<Twitter />
			</a>{' '}
			<a
				href={`https://github.com/${github}/`}
				target="_blank"
				rel="noopener noreferrer"
			>
				<GitHub />
			</a>
			<a
				href={`https://bsky.app/profile/${bluesky}/`}
				target="_blank"
				rel="noopener noreferrer"
			>
				<Bluesky />
			</a>
			<a
				href={`https://mastodon.social/@${mastodon}`}
				target="_blank"
				rel="noopener noreferrer"
			>
				<Mastodon />
			</a>
		</div>
	</div>
</footer>
