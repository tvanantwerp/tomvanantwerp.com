---
import GitHub from '../icons/github.astro';
import Twitter from '../icons/twitter.astro';
import Bluesky from '../icons/bluesky.astro';
import Mastodon from '../icons/mastodon.astro';
import LinkedIn from '../icons/linkedin.astro';

const { title, year, twitter, github, bluesky, mastodon, linkedin } =
	Astro.props;
---

<footer class="footer">
	<div class="footer__content">
		<div>{`Â© ${title} ${year}`}</div>
		<div class="footer__social-links">
			<a
				href={`https://twitter.com/${twitter}`}
				target="_blank"
				rel="noopener noreferrer"
			>
				<span class="visually-hidden">Twitter</span>
				<Twitter />
			</a>{' '}
			<a
				href={`https://github.com/${github}/`}
				target="_blank"
				rel="noopener noreferrer"
			>
				<span class="visually-hidden">GitHub</span>
				<GitHub />
			</a>
			<a
				href={`https://bsky.app/profile/${bluesky}/`}
				target="_blank"
				rel="noopener noreferrer"
			>
				<span class="visually-hidden">Bluesky</span>
				<Bluesky />
			</a>
			<a
				href={`https://mastodon.social/@${mastodon}`}
				target="_blank"
				rel="noopener noreferrer"
			>
				<span class="visually-hidden">Mastodon</span>
				<Mastodon />
			</a>
			<a
				href={`https://www.linkedin.com/in/${linkedin}/`}
				target="_blank"
				rel="noopener noreferrer"
			>
				<span class="visually-hidden">LinkedIn</span>
				<LinkedIn />
			</a>
		</div>
	</div>
</footer>
