---
import {SocialUsername} from '../../data/metadata';

interface Props {
	socialUsernames: SocialUsername[];
	title: string;
	year: number;
}

const { socialUsernames, title, year } = Astro.props;
---

<footer class="footer">
	<div class="footer__content">
		<div>{`Â© ${title} ${year}`}</div>
		<div class="footer__social-links">
			{socialUsernames.map(u => (
				<a
					href={u.url}
					target="_blank"
					rel="noopener noreferrer"
				>
					<span class="visually-hidden">{u.name}</span>
					<u.icon />
				</a>
			))}
		</div>
	</div>
</footer>
