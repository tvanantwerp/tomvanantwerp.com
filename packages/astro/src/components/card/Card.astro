---
import { Picture } from 'astro:assets';

const { title, url, image, imageAlt } = Astro.props;
---

<li class="card">
	<a href={url} class="card__link"></a>
	{
		image && imageAlt ? (
			<Picture
				src={image}
				alt={imageAlt}
				widths={[300, 450, 600]}
				sizes="container(min-width: 600px) 600px,container(min-width: 450px) 450px,300px"
				formats={['avif', 'webp']}
				pictureAttributes={{style: "aspect-ratio: 16/9; fit: cover; position: center;"}}
			/>
		) : null
	}
	<h2 class="card__title">{title}</h2>
</li>
