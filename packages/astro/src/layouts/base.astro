---
import Head from '../components/head';
import Navigation from '../components/navigation';
import Footer from '../components/footer';
const defaultMetadata = {
	title: 'Tom VanAntwerp',
	description: "TVA's Digital Garden",
	url: 'https://tomvanantwerp.com',
	author: 'Tom VanAntwerp',
	twitter: 'tvanantwerp',
	github: 'tvanantwerp',
	image: '/img/tom_poly-cropped.png',
};
const defaultNavigation = [
	{ slug: 'about', title: 'About' },
	{ slug: 'writing', title: 'Writing' },
	{ slug: 'projects', title: 'Projects' },
];
const { content } = Astro.props;
const { data } = content;

const title = content.title ?? data?.title ?? defaultMetadata.title;
const description =
	content.description ?? data?.description ?? defaultMetadata.description;
const url = new URL(
	content.url ?? data?.url ?? undefined,
	defaultMetadata.url,
).toString();
const author = content.author ?? data?.author ?? defaultMetadata.author;
const twitter = content.twitter ?? data?.twitter ?? defaultMetadata.twitter;
const image = new URL(
	content.image ?? data?.image ?? defaultMetadata.image,
	defaultMetadata.url,
).toString();
const ignore = content.ignore ?? data?.ignore ?? false;
const canonical = content.canonical ?? data?.canonical ?? undefined;
---

<!DOCTYPE html>
<html lang="en">
	<Head
		title={title}
		description={description}
		url={url}
		author={author}
		twitter={twitter}
		image={image}
		ignore={ignore}
		canonical={canonical}
	/>
	<body class="layout">
		<Navigation title={defaultMetadata.title} links={defaultNavigation} />
		<main class="content">
			<slot />
		</main>
		<Footer
			title={defaultMetadata.author}
			year={new Date().getFullYear()}
			twitter={defaultMetadata.twitter}
			github={defaultMetadata.github}
		/>
	</body>
</html>
