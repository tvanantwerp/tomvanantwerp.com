---
import Head from '../components/head';
import Navigation from '../components/navigation';
import Footer from '../components/footer';
const defaultMetadata = {
	title: 'Tom VanAntwerp',
	description: "TVA's Digital Garden",
	author: 'Tom VanAntwerp',
	twitter: 'tvanantwerp',
	github: 'tvanantwerp',
	image: '/img/tom_poly-cropped.png',
};
const defaultNavigation = [
	{ slug: 'about', title: 'About' },
	{ slug: 'writing', title: 'Writing' },
	{ slug: 'projects', title: 'Projects' },
];

const { content } = Astro.props;

const title = content?.title ?? content?.data?.title ?? defaultMetadata.title;
const description =
	content?.description ??
	content?.data?.description ??
	defaultMetadata.description;
const author =
	content?.author ?? content?.data?.author ?? defaultMetadata.author;
const twitter =
	content?.twitter ?? content?.data?.twitter ?? defaultMetadata.twitter;
const image = new URL(
	content?.image ?? content?.data?.image ?? defaultMetadata.image,
	Astro.site,
).toString();
const ignore = content?.ignore ?? content?.data?.ignore ?? false;
const canonical =
	content?.canonical ??
	content?.data?.canonical ??
	new URL(Astro.url.pathname, Astro.site).toString();
---

<!DOCTYPE html>
<html lang="en">
	<Head
		title={title}
		description={description}
		url={new URL(Astro.url.href).toString()}
		author={author}
		twitter={twitter}
		image={image}
		ignore={ignore}
		canonical={canonical}
	/>
	<body class="layout">
		<Navigation title={defaultMetadata.title} links={defaultNavigation} />
		<main class="content">
			<slot />
		</main>
		<Footer
			title={defaultMetadata.author}
			year={new Date().getFullYear()}
			twitter={defaultMetadata.twitter}
			github={defaultMetadata.github}
		/>
	</body>
</html>
