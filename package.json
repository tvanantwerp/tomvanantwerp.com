{
	"name": "tomvanantwerp.com",
	"version": "0.1.0",
	"private": true,
	"author": "Tom VanAntwerp",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"watch:sass": "yarn workspace @tomvanantwerp-com/eleventy watch:sass",
		"watch:eleventy": "yarn workspace @tomvanantwerp-com/eleventy watch:eleventy",
		"build:sass": "yarn workspace @tomvanantwerp-com/eleventy build:sass",
		"build:eleventy": "yarn workspace @tomvanantwerp-com/eleventy build:eleventy",
		"postbuild": "yarn workspace @tomvanantwerp-com/eleventy postbuild",
		"start": "yarn workspace @tomvanantwerp-com/eleventy start",
		"build": "yarn workspace @tomvanantwerp-com/eleventy build",
		"debug": "yarn workspace @tomvanantwerp-com/eleventy debug",
		"lint": "eslint --fix .",
		"format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
		"leetcode": "plop leetcode",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.61.0",
		"@typescript-eslint/parser": "^5.61.0",
		"astro": "^2.7.3",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"eslint": "^8.44.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.3",
		"lodash": "^4.17.21",
		"luxon": "^2.5.2",
		"markdown-it-anchor": "^8.4.1",
		"markdown-it-footnote": "^3.0.3",
		"markdown-it-link-attributes": "^3.0.0",
		"markdown-it": "^12.3.2",
		"npm-run-all": "^4.1.5",
		"plop": "^3.1.1",
		"prettier": "^2.8.8"
	},
	"browserslist": [
		"last 2 versions"
	],
	"lint-staged": {
		"*.{js,ts,jsx,tsx}": "eslint --cache --fix --ignore-path .gitignore",
		"*.+(js|ts|jsx|tsx|json)": "prettier --write --ignore-path .gitignore"
	},
	"dependencies": {
		"-": "^0.0.1"
	}
}
